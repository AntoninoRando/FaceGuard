{
  "info": {
    "name": "Thermal Biometric API",
    "description": "REST API for face identification, verification, and anti-spoofing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "System",
      "item": [
        {
          "name": "Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"]
            }
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Gallery",
      "item": [
        {
          "name": "Gallery Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/gallery/info",
              "host": ["{{baseUrl}}"],
              "path": ["gallery", "info"]
            }
          }
        },
        {
          "name": "List Identities",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/identities",
              "host": ["{{baseUrl}}"],
              "path": ["identities"]
            }
          }
        }
      ]
    },
    {
      "name": "Identification",
      "item": [
        {
          "name": "Identify Face",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/identify?top_k=5&metric=cosine",
              "host": ["{{baseUrl}}"],
              "path": ["identify"],
              "query": [
                {
                  "key": "threshold",
                  "value": "0.4",
                  "disabled": true
                },
                {
                  "key": "top_k",
                  "value": "5"
                },
                {
                  "key": "metric",
                  "value": "cosine"
                }
              ]
            }
          }
        },
        {
          "name": "Identify Face (Custom Threshold)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/identify?threshold=0.35&top_k=10",
              "host": ["{{baseUrl}}"],
              "path": ["identify"],
              "query": [
                {
                  "key": "threshold",
                  "value": "0.35"
                },
                {
                  "key": "top_k",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Verification",
      "item": [
        {
          "name": "Verify Identity",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "claimed_id",
                  "value": "5",
                  "type": "text"
                },
                {
                  "key": "metric",
                  "value": "cosine",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/verify",
              "host": ["{{baseUrl}}"],
              "path": ["verify"]
            }
          }
        },
        {
          "name": "Verify with Gallery Update",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "claimed_id",
                  "value": "5",
                  "type": "text"
                },
                {
                  "key": "update_gallery",
                  "value": "true",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/verify",
              "host": ["{{baseUrl}}"],
              "path": ["verify"]
            }
          }
        }
      ]
    },
    {
      "name": "Anti-Spoofing",
      "item": [
        {
          "name": "Detect Spoofing",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/antispoofing/detect",
              "host": ["{{baseUrl}}"],
              "path": ["antispoofing", "detect"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ]
}
